<Window x:Class="FlightTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightTracker"
        mc:Ignorable="d"
        Title="FS FlightTracker" Height="450" Width="800">
    <Grid>
      <StackPanel>
        <Button Content="Connect to Simulator" Height="30" FontSize="16" Command="{Binding ConnectCommand}" />
        <Button Content="Disconnect" Height="30" FontSize="16" Command="{Binding DisconnectCommand}" />
        <TextBlock Height="27" TextWrapping="Wrap" Text="{Binding ConnectionStatus, Mode=OneWay}" FontSize="20" TextAlignment="Center"/>
      </StackPanel>
    </Grid>
</Window>
